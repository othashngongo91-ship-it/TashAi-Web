<div class="app-container">
  <div class="header">
    <img src="data:image/png;base64," alt="TashAi Logo" class="logo">
    <h1>TashAi</h1>
  </div>
  <div class="chat-container" id="chat-container">
    <div class="message bot">Hello! I am TashAi. How can I help you today?</div>
  </div>
  <div class="input-container">
    <input type="text" id="user-input" placeholder="Type your message..." autofocus>
    <button id="send-btn">Send</button>
  </div>
</div>
<script>
const chatContainer = document.getElementById('chat-container');
const userInput = document.getElementById('user-input');
const sendBtn = document.getElementById('send-btn');

const personalities = {
  friendly: ["Hi there! ðŸ˜Š","How's your day going?","I'm happy to chat with you!"],
  serious: ["Please provide details.","I need accurate information.","Let's stay focused."],
  funny: ["Why did the chicken cross the road? To chat with you! ðŸ˜‚","I'm full of jokes!","Hehe, that's funny!"]
};

let currentPersonality = "friendly";

function getResponse(input) {
  input = input.toLowerCase();
  if (input.includes("be serious")) currentPersonality = "serious";
  else if (input.includes("be funny")) currentPersonality = "funny";
  else if (input.includes("be friendly")) currentPersonality = "friendly";

  const responses = personalities[currentPersonality];
  return responses[Math.floor(Math.random() * responses.length)];
}

function appendMessage(sender, text) {
  const msgDiv = document.createElement('div');
  msgDiv.classList.add('message', sender);
  msgDiv.textContent = text;
  chatContainer.appendChild(msgDiv);
  chatContainer.scrollTop = chatContainer.scrollHeight;
}

sendBtn.addEventListener('click', () => {
  const text = userInput.value.trim();
  if (!text) return;
  appendMessage('user', text);
  userInput.value = '';
  setTimeout(() => { appendMessage('bot', getResponse(text)); }, 500);
});

userInput.addEventListener('keypress', (e) => {
  if (e.key === 'Enter') sendBtn.click();
});
</script>
